<?php if ($_items = $block->getItems()): ?>
    <div class="related-products">
        <h2 class="block-title"><?php echo __('Related Products'); ?></h2>
        <div class="product-divider"></div>
        <div class="products-wrapper">
            <?php foreach ($_items as $_item): ?>
                <div class="related-product-item">
                    <a href="<?php echo $_item->getProductUrl(); ?>" class="related-product-link">
                        <img src="<?php echo $block->getImage($_item, 'category_page_grid')->getImageUrl(); ?>"
                             alt="<?php echo $this->escapeHtml($_item->getName()); ?>" />
                    </a>

                    <div class="related-product-info">
                        <!-- related product name -->
                        <a href="<?php echo $_item->getProductUrl(); ?>" class="related-product-name">
                            <?php echo $this->escapeHtml($_item->getName()); ?>
                        </a>
                        <!-- related product rating -->
                        <?php if ($block->getReviewsSummaryHtml($_item, 'short', false)): ?>
                            <div class="related-product-rating">
                                <?php echo $block->getReviewsSummaryHtml($_item, 'short', false); ?>
                            </div>
                        <?php endif; ?>
                        <!-- related product price -->
                        <div class="related-product-price">
                            <?php echo $block->getProductPrice($_item); ?>
                        </div>
                    </div>

                    <!-- add to cart button -->
                    <div class="related-product-action">
                        <form method="post" action="<?php echo $block->escapeUrl($block->getAddToCartUrl($_item)); ?>" class="add-to-cart-form">
                            <button type="submit" class="action primary">
                                <?php echo __('Add to Cart'); ?>
                            </button>
                        </form>
                    </div>
                </div>
            <?php endforeach; ?>
        </div>
    </div>
<?php endif; ?>
