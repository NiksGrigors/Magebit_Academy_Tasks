<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="magebit_post" resource="default" engine="innodb" comment="Magebit Post Table">
        <column name="entity_id" xsi:type="int" nullable="false" identity="true" comment="Entity ID"/>
        <column name="title" xsi:type="varchar" nullable="false" length="255" comment="Title"/>
        <column name="status" xsi:type="smallint" nullable="false" default="1" comment="Status"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>
</schema>
