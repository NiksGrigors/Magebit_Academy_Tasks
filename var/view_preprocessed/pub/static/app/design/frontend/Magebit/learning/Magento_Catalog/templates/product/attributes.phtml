<?php /** @var \Magento\Catalog\Model\Product $product */ /** @var \Magento\Catalog\Block\Product\View $block */ if (!$block) { return; } $product = $block->getProduct(); if (!$product) { echo "Error: Product object is not available."; return; } $attributeCodes = ['color', 'size', 'dimensions']; $attributesToShow = []; foreach ($attributeCodes as $code) { $attribute = $product->getResource()->getAttribute($code); if ($attribute && $attribute->getFrontend()->getValue($product)) { $attributesToShow[$code] = $attribute->getFrontend()->getValue($product); } } if (count($attributesToShow) < 3) { $allAttributes = $product->getAttributes(); /** @var \Magento\Eav\Model\Entity\Attribute $attribute */ foreach ($allAttributes as $attribute) { if (!in_array($attribute->getAttributeCode(), $attributeCodes) && count($attributesToShow) < 3 && !$attribute->getIsSystem() && $attribute->getIsVisibleOnFront() ) { $attributeValue = $attribute->getFrontend()->getValue($product); if ($attributeValue) { $attributesToShow[$attribute->getAttributeCode()] = $attributeValue; } } } } $description = $product->getDescription(); $firstSentence = ''; if ($description) { $sentences = preg_split('/(?<=[.?!])\s+/', strip_tags($description), 2); if (!empty($sentences)) { $firstSentence = $sentences[0]; } } ?> <!-- Attributes Section --><?php if (!empty($attributesToShow)): ?> <div class="product-attributes" style="background: #F9F9F9 0% 0% no-repeat padding-box; padding-top: 20px"><ul><?php foreach ($attributesToShow as $code => $value): ?> <li> <strong><?php echo ucfirst($code); ?>:</strong> <?php echo htmlspecialchars($value); ?></li> <?php endforeach; ?></ul><!-- First sentence from the description with specified styles --><?php if (!empty($firstSentence)): ?> <p style=" text-align: left; font: normal normal normal 12px/17px 'Open Sans'; letter-spacing: 0px; color: #333333; opacity: 1; padding: 0px 20px 20px 20px;"><?php echo htmlspecialchars($firstSentence); ?></p><?php endif; ?></div><?php endif; ?>